def soma_e_media(lista):
    soma = sum(lista)
    media = soma / len(lista)
    return soma, media

lista = [15, 30, 45, 60]
soma, media = soma_e_media(lista)

print(f"a soma da lista fica algo em torno de {soma}")
print(f"a media da lista da exatamente {media}")

def triangulo(linhas):
    for linha in range(linhas):
        print("*" *(linha+1))
    
triangulo(4)   

    
def substituição(lista, palavra, substituta):
    for i in range(len(lista)):
        if (lista[i] == palavra):
            lista[i] = substituta
    return lista
print(substituição(["abacaxi", "laranja", "limão", "banana"], "banana", "pinha"))
